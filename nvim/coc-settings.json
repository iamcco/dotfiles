{
  // coc setting
  "coc.preferences.enableMessageDialog": true,
  "coc.preferences.enableLinkedEditing": false,
  "coc.preferences.maxFileSize": "500KB",
  "coc.preferences.silentAutoupdate": true,
  "coc.preferences.extensionUpdateCheck": "weekly",
  "coc.preferences.formatOnType": false,
  "[c][css][scss][less][svg][dart][html][rust][typescript][javascript][typescriptreact][javascriptreact]": {
    "coc.preferences.formatOnSave": true
  },

  "workspace.bottomUpFiletypes": [],
  "workspace.rootPatterns": [
    "package.json", // npm project
    "CMakeLists.txt", // cmake project
    "Cargo.toml", // rust
    ".git",
    ".hg",
    ".projections.json"
  ],

  // inlayHint
  "inlayHint.enable": false,
  "inlayHint.display": false,
  "inlayHint.enableParameter": true,

  // codeLens
  "codeLens.enable": false,
  "codeLens.position": "eol",
  "codeLens.subseparator": " | ",

  // coc source
  "coc.source.issues.priority": 99,
  "coc.source.file.priority": 90,
  "coc.source.around.priority": 1,
  "coc.source.buffer.priority": 1,
  "coc.source.file.ignoreHidden": false,

  // suggest
  "suggest.noselect": true,
  "suggest.detailField": "abbr",
  "suggest.triggerAfterInsertEnter": false,
  "suggest.labelMaxLength": 100,

  // diagnostic
  "diagnostic.infoSign":            "·É¶",
  "diagnostic.hintSign":            "‡Æê",
  "diagnostic.warningSign":         "¬ª",
  "diagnostic.errorSign":           "√ó",
  "diagnostic.enable":              true,
  // ÊèíÂÖ•Ê®°Âºè‰∏ãÊõ¥Êñ∞‰ºöÂç°ËæìÂÖ•
  "diagnostic.refreshOnInsertMode": false,

  // snippets
  "snippets.priority": 90,
  "snippets.ultisnips.enable": false,
  "snippets.textmateSnippetsRoots": [
    "~/.configrc/textmate-snippets"
  ],
  "snippets.extends": {
    "typescript": ["javascript"],
    "javascriptreact": ["javascript"]
  },

  // deno
  "deno.inlayHints.variableTypes.enabled": true,
  "deno.inlayHints.parameterNames.enabled": "literals",
  "deno.inlayHints.functionLikeReturnTypes.enabled": true,

  // rust
  "rust-analyzer.lens.enable": false,
  "rust-analyzer.lens.run.enable": false,
  "rust-analyzer.lens.debug.enable": false,
  "rust-analyzer.lens.references.trait.enable": false,
  "rust-analyzer.lens.references.adt.enable": false,
  "rust-analyzer.lens.implementations.enable": false,
  "rust-analyzer.lens.references.method.enable": false,
  "rust-analyzer.lens.references.enumVariant.enable": false,
  "rust-analyzer.diagnostics.experimental.enable": true,
  "rust-analyzer.rustfmt.rangeFormatting.enable": true,

  // dioxus
  "dioxus.formatOnSave": "followFormatOnSave",

  // coc list
  "list.floatPreview": true,
  "list.menuAction": true,
  "list.insertMappings": {
    "<C-f>": "do:previewdown",
    "<C-b>": "do:previewup",
  },
  "list.normalMappings": {
    "<C-f>": "do:previewdown",
    "<C-b>": "do:previewup",
  },

  "project.rootPatterns": [
    "package.json", // npm project
    "CMakeLists.txt", // cmake project
    "Cargo.toml", // rust project
    ".git",
    ".hg",
    ".projections.json"
  ],

  // "npm.binPath": "cnpm",

  // coc-flutter
  "flutter.openDevLogSplitCommand": "botright 10split",

  // coc-zi
  "zi.hover": false,

  // ds-pinyin-lsp
  "ds-pinyin-lsp.completion_on": true,
  "ds-pinyin-lsp.completion_around_mode": true,
  "ds-pinyin-lsp.completion_trigger_characters": ">",
  "ds-pinyin-lsp.show_symbols": true,
  "ds-pinyin-lsp.show_symbols_only_follow_by_hanzi": true,
  "ds-pinyin-lsp.show_symbols_by_n_times": 2,
  "ds-pinyin-lsp.max_suggest": 50,
  "ds-pinyin-lsp.match_as_same_as_input": false,
  "ds-pinyin-lsp.match_long_input": true,
  "ds-pinyin-lsp.status_bar_flag": "Êãº",

  // utools
  "utools.changeCase.toggle": [
    "camelCase",
    "snakeCase"
  ],

  // html
  "html.autoClosingTags": true,

  // prettier
  "prettier.statusItemText": "üÖø",

  // stylelintplus
  "stylelintplus.autoFixOnSave": true,
  "stylelintplus.autoFixOnFormat": true,

  // eslint
  "eslint.autoFixOnSave": true,

  // tslint
  "tslint.autoFixOnSave": true,

  // coc-yank
  "yank.priority": 10,
  "yank.highlight.enable": false, // use neovim's built-in instead
  "yank.highlight.duration": 200,
  "yank.limit": 2,
  "yank.list.maxsize": 100,
  "yank.enableCompletion": false,

  // vimlsp
  "vimlsp.indexes.runtimepath": true,
  "vimlsp.indexes.gap": 10,
  "vimlsp.indexes.count": 3,
  "vimlsp.suggest.fromVimruntime": true,

  // diagnostic-languageserver
  "diagnostic-languageserver.filetypes": {
    "email":    "languagetool",
    "markdown": [ "write-good", "markdownlint" ],
    "sh":       "shellcheck",
    "elixir":   ["mix_credo", "mix_credo_compile"],
    "eelixir":  ["mix_credo", "mix_credo_compile"],
    "fish": "fish",
  },
  "diagnostic-languageserver.formatFiletypes": {
    "elixir":  "mix_format",
    "eelixir": "mix_format",
    "fish": "fish_indent",
  },

  // git
  "git.showCommitInFloating": true,
  "git.conflict.enabled": true,
  "git.enableGutters":             true,
  "git.addGBlameToVirtualText":     true,
  "git.virtualTextPrefix":         "     ",
  "git.branchCharacter":           "\uf418",
  "git.addedSign.text":            "‚ñè",
  "git.changedSign.text":          "‚ñè",
  "git.removedSign.text":          "‚ñè",
  "git.topRemovedSign.text":       "‚Äæ",
  "git.changeRemovedSign.text":    "‚âÉ",
  "git.addedSign.hlGroup":         "GitAddHi",
  "git.changedSign.hlGroup":       "GitModifyHi",
  "git.removedSign.hlGroup":       "GitDeleteHi",
  "git.topRemovedSign.hlGroup":    "GitDeleteHi",
  "git.changeRemovedSign.hlGroup": "GitDeleteHi",

  // list
  "session.directory": "~/.vimbackupfile",

  // coc-gitignore
  "gitignore.templates.patch": {
    "Node": "out/"
  },

  // typescript
  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.inlayHints.parameterNames.enabled": "literals",
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": false,
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  "typescript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": true,
  "javascript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": true,
  "typescript.format.insertSpaceAfterConstructor": true,
  "javascript.format.insertSpaceAfterConstructor": true,
  "javascript.format.insertSpaceBeforeFunctionParenthesis": true,
  "typescript.autoClosingTags": true,
  "javascript.autoClosingTags": true,

  // coc-lua
  "sumneko-lua.enableNvimLuaDev": true,
  "Lua.completion.callSnippet": "Replace",

  // clock
  "clock.enable": false,

  "cSpell.status-bar-text": "üÖ≤ üÜÇ",
  "cSpell.fixSpellingWithRenameProvider": true,
  "cSpell.enabledLanguageIds": [
    "asciidoc",
    "c",
    "cpp",
    "csharp",
    "css",
    "git-commit",
    "gitcommit",
    "go",
    "handlebars",
    "haskell",
    "html",
    "jade",
    "java",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "latex",
    "less",
    "markdown",
    "php",
    "plaintext",
    "python",
    "pug",
    "restructuredtext",
    "rust",
    "scala",
    "scss",
    "text",
    "typescript",
    "typescriptreact",
    "yaml",
    "yml",
    "vim"
  ],

  // languageserver
  "languageserver": {
    "sh": {
      "command": "bash-language-server",
      "args": ["start", "--stdio"],
      "filetypes": ["sh"],
      "initializationOptions": {},
      "ignoredRootPaths": ["~"],
      "settings": {}
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "golang": {
      "command": "bingo",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    }
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
  // vim:ft=jsonc
}
