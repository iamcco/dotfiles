{
  // coc setting
  "coc.preferences.silentAutoupdate": true,
  "coc.preferences.extensionUpdateCheck": "daily",
  "coc.preferences.snippets.enable": true,
  "coc.preferences.snippetStatusText": "",
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "svg",    // coc-svg support svg format
    "dart",   // coc-flutter support dart format */
    "elixir", // diagnostic-languageserver support elixir format
    "eelixir", // diagnostic-languageserver support elixir format
    "html"
  ],

  "highlight.disableLanguages": [
    "cocactions"
  ],

  "npm.binPath": "cnpm",

  // diagnostic
  "diagnostic.infoSign":            "ღ",
  "diagnostic.hintSign":            "ஐ",
  "diagnostic.warningSign":         "»",
  "diagnostic.errorSign":           "×",
  "diagnostic.enable":              true,
  "diagnostic.highlightOffset":     9999999,
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic.separateRelatedInformationAsDiagnostics": true,

  // coc-flutter
  "flutter.openDevLogSplitCommand": "botright 10split",

  // utools
  "utools.changeCase.toggle": [
    "camelCase",
    "snakeCase"
  ],

  // suggest
  "suggest.languageSourcePriority": 99,
  "suggest.detailField": "abbr",
  "suggest.maxCompleteItemCount": 50,
  "suggest.maxPreviewWidth": 80,
  "suggest.triggerAfterInsertEnter": false,
  "suggest.detailMaxLength": 30,
  "suggest.completionItemKindLabels": {
    "keyword":       "\uf1de",
    "variable":      "\ue79b",
    "value":         "\uf89f",
    "operator":      "\u03a8",
    "function":      "\u0192",
    "reference":     "\ufa46",
    "constant":      "\uf8fe",
    "method":        "\uf09a",
    "struct":        "\ufb44",
    "class":         "\uf0e8",
    "interface":     "\uf417",
    "text":          "\ue612",
    "enum":          "\uf435",
    "enumMember":    "\uf02b",
    "module":        "\uf40d",
    "color":         "\ue22b",
    "property":      "\ue624",
    "field":         "\uf9be",
    "unit":          "\uf475",
    "event":         "\ufacd",
    "file":          "\uf723",
    "folder":        "\uf114",
    "snippet":       "\ue60b",
    "typeParameter": "\uf728",
    "default":       "\uf29c"
  },

  // html
  "html.suggest.angular1": false,   // angular1 is outdate, coc-angular support better
  "html.autoClosingTags": true,

  // coc source
  "coc.source.issues.priority": 99,
  "coc.source.file.priority": 90,
  "coc.source.emoji.priority": 3,
  "coc.source.around.priority": 1,
  "coc.source.buffer.priority": 1,
  "coc.source.around.firstMatch": false,
  "coc.source.buffer.firstMatch": false,
  "coc.source.file.ignoreHidden": false,

  // snippets
  "snippets.priority": 90,
  "snippets.ultisnips.enable": false,
  "snippets.textmateSnippetsRoots": [
    "~/.configrc/textmate-snippets"
  ],
  "snippets.extends": {
    "typescript": ["javascript"],
    "javascriptreact": ["javascript"]
  },

  // emment
  "emmet.priority": 3,
  "emmet.showAbbreviationSuggestions": true,
  "emmet.includeLanguages": {
    "eruby": "html"
  },

  // prettier
  "prettier.eslintIntegration": true,
  "prettier.tslintIntegration": true,
  "prettier.stylelintIntegration": true,
  "prettier.statusItemText": "",

  // eslint
  "eslint.autoFixOnSave": true,

  // tslint
  "tslint.autoFixOnSave": true,

  // pairs
  "pairs.enableCharacters": [
    "(",
    "[",
    "{",
    "'",
    "\"",
    "`"
  ],

  // coc-yank
  "yank.priority": 10,
  "yank.highlight.enable": false, // use neovim's built-in instead
  "yank.highlight.duration": 200,
  "yank.limit": 2,
  "yank.list.maxsize": 100,
  "yank.enableCompletion": false,

  // vimlsp
  "vimlsp.indexes.runtimepath": true,
  "vimlsp.indexes.gap": 10,
  "vimlsp.indexes.count": 3,
  "vimlsp.suggest.fromVimruntime": true,

  // diagnostic-languageserver
  "diagnostic-languageserver.filetypes": {
    "email":    "languagetool",
    "markdown": [ "write-good", "markdownlint" ],
    "sh":       "shellcheck",
    "elixir":   ["mix_credo", "mix_credo_compile"],
    "eelixir":  ["mix_credo", "mix_credo_compile"]
  },
  "diagnostic-languageserver.formatFiletypes": {
    "elixir":  "mix_format",
    "eelixir": "mix_format"
  },

  // git
  "git.enableGutters":             true,
  "git.addGBlameToVirtualText":     true,
  "git.virtualTextPrefix":         "     ",
  "git.branchCharacter":           "\uf418",
  "git.addedSign.text":            "▏",
  "git.changedSign.text":          "▏",
  "git.removedSign.text":          "▏",
  "git.topRemovedSign.text":       "‾",
  "git.changeRemovedSign.text":    "≃",
  "git.addedSign.hlGroup":         "GitAddHi",
  "git.changedSign.hlGroup":       "GitModifyHi",
  "git.removedSign.hlGroup":       "GitDeleteHi",
  "git.topRemovedSign.hlGroup":    "GitDeleteHi",
  "git.changeRemovedSign.hlGroup": "GitDeleteHi",

  // list
  "session.directory": "~/.vimbackupfile",

  // coc-gitignore
  "gitignore.templates.patch": {
    "Node": "out/"
  },

  // coc-lua
  "Lua.diagnostics.globals": ["vim"],
  "Lua.workspace.library": {
    "/usr/local/Cellar/neovim/HEAD-faa47ea/share/nvim/runtime/lua": true,
    "/usr/local/Cellar/neovim/HEAD-faa47ea/share/nvim/runtime/lua/vim/lsp": true
  },

  // clock
  "clock.enable": false,

  "cSpell.fixSpellingWithRenameProvider": true,
  "cSpell.enabledLanguageIds": [
    "asciidoc",
    "c",
    "cpp",
    "csharp",
    "css",
    "git-commit",
    "gitcommit",
    "go",
    "handlebars",
    "haskell",
    "html",
    "jade",
    "java",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "latex",
    "less",
    "markdown",
    "php",
    "plaintext",
    "python",
    "pug",
    "restructuredtext",
    "rust",
    "scala",
    "scss",
    "text",
    "typescript",
    "typescriptreact",
    "yaml",
    "yml",
    "vim"
  ],
  "cSpell.userWords": [
    "Neovim",
    "Nerdfont",
    "Signining",
    "Unimported",
    "bignumber",
    "botright",
    "bowser",
    "ccls",
    "cnpm",
    "cocactions",
    "configrc",
    "eelixir",
    "emment",
    "eruby",
    "gitignore",
    "iamcco",
    "imselect",
    "keylayout",
    "langserver",
    "languagetool",
    "markdownlint",
    "maxsize",
    "nmap",
    "nvim",
    "objc",
    "objcpp",
    "operatorfunc",
    "sfile",
    "shellcheck",
    "shrinked",
    "smartf",
    "struct",
    "stylelint",
    "ultisnips",
    "vimbackupfile",
    "viml",
    "vimlsp",
    "vsplit"
  ],

  // languageserver
  "languageserver": {
    "sh": {
      "command": "bash-language-server",
      "args": ["start", "--stdio"],
      "filetypes": ["sh"],
      "cwd": "./",
      "initializationOptions": {},
      "ignoredRootPaths": ["~"],
      "settings": {}
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    },
    "golang": {
      "command": "bingo",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    }
  }
  // vim:ft=jsonc
}
